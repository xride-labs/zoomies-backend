# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL Database URL (Supabase or Neon)
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres"

# MongoDB Connection String (for additional MongoDB support)
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/zoomies?retryWrites=true&w=majority"

# ===========================================
# Auth.js Configuration
# ===========================================

# Auth.js Secret - Generate with: npx auth secret
# REQUIRED: A random string used to encrypt cookies and tokens
AUTH_SECRET="your-auth-secret-generate-with-npx-auth-secret"

# Auth.js URL (your backend URL)
AUTH_URL="http://localhost:3001"

# Trust Host (set to true in production behind a proxy)
AUTH_TRUST_HOST=true

# ===========================================
# OAuth Providers
# ===========================================

# Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID="your-google-client-id.apps.googleusercontent.com"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# ===========================================
# Twilio SMS Configuration (for Mobile OTP)
# ===========================================

# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ===========================================
# Server Configuration
# ===========================================

# Port for the Express server
PORT=3001

# Node Environment
NODE_ENV="development"

# Frontend URLs (for CORS)
FRONTEND_URL="http://localhost:3000"
MOBILE_APP_URL="exp://localhost:8081"

# ===========================================
# Optional: Email Configuration (Nodemailer - Gmail SMTP)
# ===========================================

# Gmail SMTP (use an App Password)
# EMAIL_USER="your-gmail@gmail.com"
# EMAIL_APP_PASSWORD="your-app-password"
# EMAIL_FROM="Zoomies <your-gmail@gmail.com>"

# ===========================================
# Cloudinary Configuration (for media uploads)
# ===========================================

# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ===========================================
# Background Jobs Configuration
# ===========================================

# Number of days to keep completed/cancelled rides before auto-deletion
# Set to a high number (e.g., 9999) to effectively disable auto-deletion
RIDE_RETENTION_DAYS=30
